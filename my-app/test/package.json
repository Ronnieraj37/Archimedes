{
  "name": "archimedes-agent-tests",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:sdk": "jest test/sdk-tests",
    "test:unit": "jest test/unit-tests",
    "test:integration": "jest test/integration-tests"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../$1"
    }
  }
}
